
<div class="large-12 columns">
  <img src="<%= game.image %>" alt="<%= game.name %>">
  <h2><%= game.name %></h2>
  <% { %>
    <a href="/games/<%= game.id %>/edit">Edit</a>
    <a href="/games">Back</a>
    <% } %>
    <p>
      <p>Game: <%= game.game %></p>
      <p>Console: <%= game.console %></p>
      <p>Prize money: Â£<%= game.prizeMoney %></p>
      <p>Gaming website: <%= game.gamingWebsite %></p>
      <p>Players needed: <%= game.playersNeeded %></p>
      <p>Tournament: <%= game.tournament %></p>
      <p>Gamer Tag: <%= game.gamerTag %></p>
      <p>Start Time: <%= game.startTime %></p>
      <p>Created By: <%= game.user.username %></p>
    </p>
  </div>
  <form method="POST" action="/games/<%= game.id %>">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-danger btn-lg btn-block">Delete</button>
  </form>

  <section>
    <h4>Comments</h4>
<% game.comments.forEach((comment) => { %>
      <p><%= comment.content %></p>
      <small><%= comment.user.username %></small>
      <% if(locals.isAuthenticated) { %>
        <form method="POST" action="/games/<%= game.id %>/comments/<%= comment.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <button>Delete</button>
        </form>
        <% } %>
        <% }) %>
      </section>
