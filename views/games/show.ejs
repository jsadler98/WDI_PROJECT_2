
<div class="large-12 columns">
  <div class="text-center">
    <img src="<%= game.image %>" alt="<%= game.name %>">
    <a href="/games/<%= game.id %>/edit" class="btn btn-lg active" role="button" aria-pressed="true">Edit</a>
    <a href="/games" class="btn btn-lg active" role="button" aria-pressed="true">Back</a>
  </div>
  <h2><%= game.name %></h2>
  <% { %>


    <p>
      <p class="game-info">Game: <%= game.game %> </p>
      <p class="game-info">Console: <%= game.console %></p>
      <p class="game-info">Prize money: Â£<%= game.prizeMoney %></p>
      <p class="game-info">Gaming website: <%= game.gamingWebsite %></p>
      <p class="game-info">Players needed: <%= game.playersNeeded %></p>
      <p class="game-info">Tournament: <%= game.tournament %></p>
      <p class="game-info">Gamer Tag: <%= game.gamerTag %></p>
      <p class="game-info">Start Time: <%= game.startTime %></p>
      <p class="game-info">Created By: <%= game.user.username %></p>
    </p>

  </div>

  <section>
    <h4  class="comments" >Comments</h4>
    <% game.comments.forEach((comment) => { %>
      <p  class="game-info" ><%= comment.content %></p>
      <p  class="game-info" ><%= comment.user.username %></p>
      <% if(locals.isAuthenticated) { %>
        <form method="POST" action="/games/<%= game.id %>/comments/<%= comment.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <button>Delete</button>
        </form>
        <% } %>
        <% }) %>
      </section>
        <% } %>

      <form method="POST" action="/games/<%= game.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger btn-lg btn-block">Delete</button>
      </form>
